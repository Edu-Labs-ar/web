{
  "name": "edu-back",
  "version": "0.1.0",
  "description": "Backend de la p√°gina web de Edulabs.",
  "main": "src/index.js",
  "scripts": {
    "start": "cross-env TS_NODE_PROJECT=config/tsconfig.json node --inspect=5858 -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon -r dotenv/config",
    "lint": "tslint -c config/tslint.json -p config/tsconfig.json --fix --force",
    "build": "tsc -p config/tsconfig.json"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.10.0",
    "nodemailer": "^6.4.11"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.0.27",
    "@types/nodemailer": "^6.4.0",
    "cross-env": "^7.0.2",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.3",
    "typescript": "^3.9.7"
  }
}
