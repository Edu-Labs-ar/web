{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../build",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "paths": {
      "*": [
        "*",
        "./node_modules/*"
      ],
      "api": [
        "../api"
      ]
    }
  },
  "include": [
    "../src/**/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/.vscode"
  ]
}

